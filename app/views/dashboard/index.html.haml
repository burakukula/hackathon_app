!!!
%html
%header
.container
  .title
    %h1 Hackathon Rome
  .border
%main
  .container
    - @projects.each do |project|
      .row
        .col-md-3
          .project-title= project.name
        .col-md-7
          .project-description= project.description
        .col-md-2.vote-button
          %a.button.btn.btn-link{:href => "#vote", :name => "vote", :rel => "leanModal"}
            vote
          #vote
            %form{:action => project_vote_path(project), :method => "post", :name => "vote"}
              %label{:for => "token"} Your token please:
              %input#token{:token => "name", :type => "text"}/
%footer
